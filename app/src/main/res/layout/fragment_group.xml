<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="65dp"
    android:background="@drawable/text_border_dash"
    android:orientation="vertical"
    tools:context=".ui.group.GroupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group_con_for_text" />

        <TextView
            android:id="@+id/group_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="7"
            android:fontFamily="@font/nanumgothic_normal"
            android:text="주위를 둘러보는 중..."
            android:textColor="@color/default_text"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/list_g"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/member_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumgothic_normal"
                android:textColor="@color/default_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/member_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="15"
                android:fontFamily="@font/nanumgothic_normal"
                android:textColor="@color/default_text"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/group_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="@font/nanumgothic_light"
                android:text="그룹 검색"
                android:textColor="@color/default_text"
                android:visibility="invisible" />

            <Button
                android:id="@+id/group_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="@font/nanumgothic_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="그룹 만들기"
                android:textColor="@color/default_text"
                android:visibility="invisible" />

            <Button
                android:id="@+id/withdrawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="@font/nanumgothic_light"
                android:text="그룹 탈퇴"
                android:textColor="@color/default_text"
                android:visibility="gone" />

            <Button
                android:id="@+id/show_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="@font/nanumgothic_light"
                android:text="초대"
                android:textColor="@color/default_text"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>